<configuration>
	<log4net>
		<!-- Error 로그를 저장할 파일 앱랜더 -->
		<appender name="ErrorFileAppender" type="log4net.Appender.FileAppender">
			<file value="ServerLog/error.log" />
			<appendToFile value="true" />
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
			</layout>
			<filter type="log4net.Filter.LevelMatchFilter">
				<levelToMatch value="ERROR" />
			</filter>
			<filter type="log4net.Filter.DenyAllFilter" />
		</appender>

		<!-- Info 로그를 저장할 파일 앱랜더 -->
		<appender name="InfoFileAppender" type="log4net.Appender.FileAppender">
			<file value="ServerLog/info.log" />
			<appendToFile value="true" />
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
			</layout>
			<filter type="log4net.Filter.LevelMatchFilter">
				<levelToMatch value="INFO" />
			</filter>
			<filter type="log4net.Filter.DenyAllFilter" />
		</appender>

		<!-- Debug 로그를 저장할 파일 앱랜더 -->
		<appender name="DebugFileAppender" type="log4net.Appender.FileAppender">
			<file value="ServerLog/debug.log" />
			<appendToFile value="true" />
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
			</layout>
			<filter type="log4net.Filter.LevelMatchFilter">
				<levelToMatch value="DEBUG" />
			</filter>
			<filter type="log4net.Filter.DenyAllFilter" />
		</appender>

		<!-- Warn 로그를 저장할 파일 앱랜더 -->
		<appender name="WarnFileAppender" type="log4net.Appender.FileAppender">
			<file value="ServerLog/warn.log" />
			<appendToFile value="true" />
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
			</layout>
			<filter type="log4net.Filter.LevelMatchFilter">
				<levelToMatch value="WARN" />
			</filter>
			<filter type="log4net.Filter.DenyAllFilter" />
		</appender>

		<!-- Fatal 로그를 저장할 파일 앱랜더 -->
		<appender name="FatalFileAppender" type="log4net.Appender.FileAppender">
			<file value="ServerLog/fatal.log" />
			<appendToFile value="true" />
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
			</layout>
			<filter type="log4net.Filter.LevelMatchFilter">
				<levelToMatch value="FATAL" />
			</filter>
			<filter type="log4net.Filter.DenyAllFilter" />
		</appender>

		<root>
			<level value="ALL" />
			<appender-ref ref="ErrorFileAppender" />
			<appender-ref ref="InfoFileAppender" />
			<appender-ref ref="DebugFileAppender" />
			<appender-ref ref="WarnFileAppender" />
			<appender-ref ref="FatalFileAppender" />
		</root>
	</log4net>
</configuration>
